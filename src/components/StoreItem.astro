---
import DateFormatter from '../components/DateFormatter.astro';

const { post } = Astro.props;
---

<article class="bg-white p-4 mb-3 row"> 
  <div class="col-sm-12 col-md-2 d-flex align-items-center">
    <img src={post.data.heroImage.url} alt={post.data.heroImage.alt} class="w-100">
  </div>
  <div class="col-sm-12 col-md-10 d-flex align-items-center">
    <div>
      <small>Product Code: {post.data.productCode}</small>
      <h3 class="mb-0 mt-0">{post.data.title}</h3>
      <small>{post.data.description}</small> <br>
      <div class="mt-3">
        <a href={post.data.affiliateLink} target="_blank" class="me-3">Buy Now On Amazon</a>
        <a href={`/store/${post.slug}/`}>Read Our Review</a>
      </div>
    </div>
  </div>
</article>