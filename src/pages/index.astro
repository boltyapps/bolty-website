---
import MasterLayout from "../layouts/MasterLayout.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import { getCollection } from "astro:content";

const posts = (await getCollection("store"));
const filteredPosts = posts.map((p) => p.data);
// console.log(filteredPosts);
---


<MasterLayout title={SITE_TITLE} description={SITE_DESCRIPTION}>
  <div class="container" style="margin-top: 8rem; margin-bottom: 8rem;">
    <div class="row">
      <div class="col-md-8 mx-auto text-center">
        <img src="img/bolty-f2.png" alt="bolty" width="512" class="img-fluid mt-3">
        <h3 class="mt-3 display-6">We Make Your Car Services<br>Easy & Hassle-Free.</h3>
      </div>
    </div>
  </div>

  <div class="container my-5">
    <div class="row">
      <div class="col-sm-12 col-md-6 d-flex justify-content-between align-items-center mb-4">
        <div class="card shadow-lg">
          <div class="row g-0">
            <div class="col-sm-12 col-md-4">
              <img src="/img/book-service.jpg" class="img-fluid rounded-start" alt="Book car service with bolty.">
            </div>
            <div class="col-sm-12 col-md-8">
              <div class="card-body">
                <h2>Car Service</h2>
                <p>Select the service you need and we take care of the rest.</p>
                <a href="/book-service" class="btn btn-dark">Book Now</a>
              </div> 
            </div>
          </div>
        </div>
      </div>
      <div class="col-sm-12 col-md-6 d-flex justify-content-between align-items-center mb-4">
        <div class="card shadow-lg">
          <div class="row g-0">
            <div class="col-sm-12 col-md-4">
              <img src="/img/bolty-store.jpg" class="img-fluid rounded-start" alt="Bolty Store">
            </div>
            <div class="col-sm-12 col-md-8">
              <div class="card-body">
                <h2>Bolty Store</h2>
                <p>Buy essentials for your car from our handpicked store.</p>
                <a href="/store" class="btn btn-dark">Go To Store</a>
              </div> 
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="container my-5 pt-5">
    <div class="row">
      <div class="col-12 text-center mb-4">
        <h2>Reasons to choose <strong>Bolty</strong></h2>
      </div>

      <div class="col-sm-12 col-md-3 mb-4">
        <div class="card shadow">
          <div class="card-body text-center">
            <img src="img/estimation.png" alt="estimation" width="64" class="mb-4">
            <h5 class="card-title fw-bold">Service Estimations</h5>
            <p class="card-text">You get all the service estimations before the service.</p>
          </div>
        </div>
      </div>
      <div class="col-sm-12 col-md-3 mb-4">
        <div class="card shadow">
          <div class="card-body text-center">
            <img src="img/schedule.png" alt="schedule" width="64" class="mb-4">
            <h5 class="card-title fw-bold">Time Slots</h5>
            <p class="card-text">Choose your own time and date for the services.</p>
          </div>
        </div>
      </div>
      <div class="col-sm-12 col-md-3 mb-4">
        <div class="card shadow">
          <div class="card-body text-center">
            <img src="img/location.png" alt="location" width="64" class="mb-4">
            <h5 class="card-title fw-bold">PickUp & Drop</h5>
            <p class="card-text">Free pickup and drop is arranged as per the request.</p>
          </div>
        </div>
      </div>
      <div class="col-sm-12 col-md-3 mb-4">
        <div class="card shadow">
          <div class="card-body text-center">
            <img src="img/notification.png" alt="notification" width="64" class="mb-4">
            <h5 class="card-title fw-bold">Timely Updates</h5>
            <p class="card-text">We will give all the service updates happening in garage.</p>
          </div>
        </div>
      </div>

      <div class="col-12 text-center my-5">
        <img src="/img/approved.png" alt="approved" width="64">
        <h4 class="mt-3">Bolty engineer's verified & approved services!</h4>
        <p class="badge bg-danger">Coming Soon</p>
      </div>
    </div>
  </div>

  <div class="container my-5" id="content">
    <div class="row">
      <div class="col-md-8 mx-auto">
        <div class="mt-5 p-5 text-white" style="background: rgb(255,92,0);
        background: linear-gradient(238deg, rgba(255,92,0,1) 0%, rgba(129,0,166,1) 100%);">
          <!-- <h5 class="mb-0 mt-4">We want you to have a</h5> -->
          <h1>Get convenient, transparent <br>and hassle-free service experience <br> with BOLTY.</h1>

          <!-- <h5 class="mt-5 mb-0">That's why we have started</h5> -->
          <!-- <h1 class="fw-bold">BOLTY</h1> -->
        </div>
      </div>
    </div>
  </div>

  <div class="container my-5">
    <div class="row">
      <div class="col-12 text-center">
        <img src="img/serviceprovider.png" alt="service provider" width="128">
        <h5  class="mt-3 mb-0 display-6">Your car is in safe hands!</h5>
        <h4>We handpick our service partners who have 10+ years of experience.</h4>
        <a href="/book-service" class="btn btn-dark btn-lg">Book Your Service Now</a>
      </div>
    </div>
  </div>
</MasterLayout>
