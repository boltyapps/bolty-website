---
import MasterLayout from "../layouts/MasterLayout.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<MasterLayout title={SITE_TITLE} description={SITE_DESCRIPTION}>
  <div class="container my-5">
    <div class="row">
      <div class="col-12 text-center mb-3">
        <h2 class="mb-0">Book Your Service</h2>
      </div>

      <div class="col-md-6 mx-auto">
        <form data-netlify="true" action="/success" id="interest" method="POST" class="bg-white p-5">
          <div class="mb-3">
            <label for="car_name" class="form-label">Car Brand & Model</label>
            <input
              type="text"
              class="form-control"
              id="car_name"
              name="car_name"
              required
            />
          </div>
          
          <div class="mb-3">
            <label for="no_of_panels" class="form-label">No of Panels for Denting & Painting</label>
            <input
              type="text"
              class="form-control"
              id="no_of_panels"
              name="no_of_panels"
              required
            />
          </div>

          <div class="mb-3">
            <label for="otherRepair" class="form-label"
              >Other Repairs/Services</label
            >
            <textarea
              class="form-control"
              id="otherRepair"
              rows="2"
              placeholder="Write here"
              name="repairs-or-services"></textarea>
          </div>

          <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input
              type="text"
              class="form-control"
              id="name"
              name="name"
              required
            />
          </div>

          <div class="mb-3">
            <label for="phone" class="form-label">Phone Number</label>
            <input
              type="number"
              class="form-control"
              id="phone"
              name="phone"
              required
            />
          </div>

          <button type="submit" class="btn btn-dark text-center w-100"
            >Book Now</button
          >
        </form>
      </div>
    </div>
  </div>
</MasterLayout>
